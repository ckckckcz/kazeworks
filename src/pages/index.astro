---
import Navbar from "../components/Navbar.astro"
import Banner from "../components/UI/Banner.astro"
import Layout from '../layouts/Layout.astro';
import Personal from "../assets/img/me.png"
---

<Layout>
	<Navbar />
	<section class="bg-transparent lg:mt-24 lg:mb-28 mt-5">
		<div class="py-8 px-4 mx-auto  max-w-screen-xl lg:py-16 grid lg:grid-cols-2 gap-8 lg:gap-16">
			<div class="flex flex-col justify-center">
				<div class="relative text-white border-2 border-gray-800 text-center w-56 mb-6 text-2xl font-semibold p-2">
					<span class="text-center font-bold">Howdy Partner!</span>
					<div>
						<span class="absolute -top-1 -left-1 w-2 h-2 bg-[#32fb00]"></span>
						<span class="absolute -top-1 -right-1 w-2 h-2 bg-[#32fb00]"></span>
						<span class="absolute -bottom-1 -left-1 w-2 h-2 bg-[#32fb00]"></span>
						<span class="absolute -bottom-1 -right-1 w-2 h-2 bg-[#32fb00]"></span>
					</div>
				</div>		
				<h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-[#32fb00] md:text-5xl lg:text-6xl dark:text-white">I‚ùúm Riovaldo, <span class="text-white">Frontend Developer Based in Indonesia</span></h1>
				<p class="mb-8 text-md font-normal text-white opacity-40 lg:text-xl dark:text-gray-400">Focused on building websites that not only look amazing but also provide a seamless and intuitive experience, making sure every interaction feels natural and engaging</p>
				<div class="flex flex-col gap-4 sm:flex-row">
					<a href="#" class="inline-flex justify-center items-center py-4 px-7 text-base font-extrabold text-center text-black rounded-full bg-[#32fb00] hover:bg-[#57eb32] focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
						View My Work
					</a>
					<a href="#" class="inline-flex justify-center items-center py-4 px-7 text-base font-extrabold text-center text-white rounded-full border-2 border-gray-600  bg-black hover:bg-gray-900 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-900">
						Download CV
					</a>
				</div>
			</div>
			<div>
				<img class="mx-auto h-full rounded-lg lg:block hidden" src={Personal.src} />
			</div>
		</div>
	</section>
	<Banner />
</Layout>
