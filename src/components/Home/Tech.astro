<script is:inline>
    // Next.js
    const nextPercent = 80;
    const nextBar = document.getElementById('progressBar80');
    const nextLabel = document.getElementById('percentage80');
    if (nextBar && nextLabel) {
        setTimeout(() => {
            nextBar.style.width = nextPercent + '%';
            nextLabel.textContent = nextPercent + '%';
        }, 300);
    }

    // Laravel
    const laravelPercent = 70;
    const laravelBar = document.getElementById('progressBar70');
    const laravelLabel = document.getElementById('percentage70');
    if (laravelBar && laravelLabel) {
